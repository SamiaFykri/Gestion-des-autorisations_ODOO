<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Action -->
    <record id="action_autorisation" model="ir.actions.act_window">
        <field name="name">Autorisation</field>
        <field name="res_model">gestion.autorisation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_autorisation_root" name="Gestion des Autorisations" sequence="10"/>
    <menuitem id="menu_autorisations" name="Autorisations" parent="menu_autorisation_root" action="action_autorisation" sequence="10"/>

    <!-- Vue liste -->
    <record id="view_autorisation_tree" model="ir.ui.view">
        <field name="name">gestion.autorisation.tree</field>
        <field name="model">gestion.autorisation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="utilisateur"/>
                <field name="module"/>
                <field name="niveau"/>
                <field name="date_creation"/>
            </tree>
        </field>
    </record>

    <!-- Vue formulaire -->
    <record id="view_autorisation_form" model="ir.ui.view">
        <field name="name">gestion.autorisation.form</field>
        <field name="model">gestion.autorisation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="utilisateur"/>
                        <field name="module"/>
                        <field name="niveau"/>
                        <field name="date_creation"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
